{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="text-center my-3">
        <h3>Mon compte</h3>
    </div>
    <table class=" table table-dark">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Email</th>
                <th>Roles</th>
                {# <th>Password</th> #}
                <th>Matricule</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Birthday</th>
                <th>Telephone</th>
                <th>Service</th>
                <th>Speciality</th>
                <th>Photo</th>
            </tr>
        </thead>
        <tbody>
        {% if app.user %}
            <tr>
                {# <td>{{ app.user.id }}</td> #}
                <td>{{ app.user.email }}</td>
                <td>{{ app.user.roles ? app.user.roles|json_encode : '' }}</td>
                {# <td>{{ app.user.password }}</td> #}
                <td>{{ app.user.matricule }}</td>
                <td>{{ app.user.firstName }}</td>
                <td>{{ app.user.lastName }}</td>
                <td>{{ app.user.birthday ? app.user.birthday|date('Y-m-d') : '' }}</td>
                <td>{{ app.user.telephone }}</td>
                <td>{{ app.user.service }}</td>
                <td>{{ app.user.speciality }}</td>
                <td><img class="img-fluid" src="{{ asset( app.user.photo ) }}"></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endif %}
        </tbody>
    </table>
    <div class="row justify-content-evenly">
        <div class="col-2 text-center">
            <a class="btn btn-secondary" href="{{ path('app_user_show', {'id': app.user.id}) }}">
                Voir
            </a>
        </div>
        <div class="col-2 text-center">
            <a class="btn btn-secondary" href="{{ path('app_user_edit', {'id': app.user.id}) }}">
                Modifier
            </a>
        </div>
    </div>
    {# <a href="{{ path('app_user_new') }}">Create new</a> #}
{% endblock %}
