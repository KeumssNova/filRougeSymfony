{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="text-center my-3">
        <h3>{{ user.firstName ~ ' ' ~ user.lastName }}</h3>
    </div>
    <table class="table table-dark w-75 mx-auto">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Matricule</th>
                <td>{{ user.matricule }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ user.birthday ? user.birthday|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ user.telephone }}</td>
            </tr>
            <tr>
                <th>Service</th>
                <td>{{ user.service }}</td>
            </tr>
            <tr>
                <th>Speciality</th>
                <td>{{ user.speciality }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ user.photo }}</td>
            </tr>
        </tbody>
    </table>
    
    <div class="row justify-content-evenly">
        <div class="col-2 btn btn-secondary">
            <a style="text-decoration: none;" href="{{ path('app_user_index') }}">
                retour
            </a>
        </div>
        <div class="col-2 btn btn-secondary">
            <a style="text-decoration: none;" href="{{ path('app_user_edit', {'id': user.id}) }}">
                editer
            </a>
        </div>
        
    </div>


    {# {{ include('user/deleteUser.html.twig') }} #}
{% endblock %}
