{% extends 'base.html.twig' %}

{% block title %}Affecter membres{% endblock %}

{% block body %}
    <div class="row">
        <div class="d-flex flex-column justify-content-center align-items-center">
            <div class="container">
                <br>
                <h3>Filtrer</h3>
                {{ form_start(form) }}
                    {{ form_widget(form) }}
                    {# <button type="submit" class="btn btn-secondary">Rechercher</button> #}
                {{ form_end(form) }}
            </div>
        </div>

        <div class="d-flex justify-content-center align-items-center">
            <div class="card w-50">
                <h4 class="m-4">Employés</h4>

                <form method="post" action="{{ path('app_projets_affecter', {id: projets.id}) }}">
                    {% for user in users %}
                        <div class="col-md-4 text-center">
                            <ul>
                                <li>
                                    <input type="checkbox" name="selected_users[]" value="{{ user.id }}">
                                    {{ user.firstName }} {{ user.lastName }} | Matricule {{ user.matricule }}
                                </li>
                            </ul>
                        </div>
                    {% endfor %}

                    <div class="m-4 text-center">
                        <button type="submit" class="btn btn-success">Affecter les utilisateurs</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="container mx-4">
            <div class="btn btn-secondary">
                <a style="text-decoration: none;" href="{{ path('app_projets_show',{'id': projets.id}) }}">Retour</a>
            </div>
        </div>

    </div>
{% endblock %}
