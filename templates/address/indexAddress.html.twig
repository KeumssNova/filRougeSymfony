{% extends 'base.html.twig' %}

{% block title %}Address index{% endblock %}

{% block body %}
    <div class="row">
        <div class="my-3 text-center">
            <h3>Mes adresses</h3>
        </div>

    </div>
    <table class="table table-dark">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Titre</th>
                <th>PrÃ©nom</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Code postal</th>
                <th>Pays</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for address in app.user.addresses %}
            <tr>
                {# <td>{{ address.id }}</td> #}
                <td>{{ address.title }}</td>
                <td>{{ address.fname }}</td>
                <td>{{ address.lname }}</td>
                <td>{{ address.address }}</td>
                <td>{{ address.city }}</td>
                <td>{{ address.cp }}</td>
                <td>{{ address.country }}</td>
                <td width="10%">
                    <a href="{{ path('app_address_show', {'id': address.id}) }}">Voir</a>
                    <a href="{{ path('app_address_edit', {'id': address.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="row justify-content-evenly">
        <div>
            <a class="btn btn-secondary" style="text-decoration: none;" href="{{ path('app_address_new') }}">
                Ajouter une adresse
            </a>
        </div>
    </div>

    
{% endblock %}
