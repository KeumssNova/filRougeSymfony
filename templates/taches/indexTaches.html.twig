{% extends 'base.html.twig' %}

{% block title %}Taches index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center m-3">
        <h1>Liste de Taches</h1>
    </div>
    
    <div class="btn btn-secondary mx-4">
        <a style="text-decoration: none;" href="{{ path('app_taches_new') }}">Create new</a>
    </div>

    <div class="d-flex justify-content-center align-items-center">
        <table class="table table-dark w-75">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>DateDebut</th>
                    <th>DateFin</th>
                    <th>Contenu</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for tach in taches %}
                <tr>
                    <td>{{ tach.id }}</td>
                    <td>{{ tach.titre }}</td>
                    <td>{{ tach.dateDebut ? tach.dateDebut|date('Y-m-d') : '' }}</td>
                    <td>{{ tach.dateFin ? tach.dateFin|date('Y-m-d') : '' }}</td>
                    <td>{{ tach.contenu }}</td>
                    <td>
                        <a href="{{ path('app_taches_show', {'id': tach.id}) }}">show</a>
                        <a href="{{ path('app_taches_edit', {'id': tach.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
